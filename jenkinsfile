pipeline {
    agent any

       stages {
            stage('SCM checkout') {
                  steps {
                        git url: 'https://github.com/Nouman72884/gh_app_demo.git'
                        }
             }

             stage('archiving artifacts') {
                  steps {
                          archiveArtifacts '**/*.py'
                        }
              }
              stage('archiving artifacts 1') {
                   steps {
                           archiveArtifacts '**/*.txt'
                         }
               }

              stage('transfer artifacts') {
                    steps {
                          sshPublisher(publishers: [sshPublisherDesc(configName: 'webserver', transfers: [sshTransfer(excludes: '', execCommand: 'sudo apt-get update -y;sudo apt-get upgrade -y;sudo apt-get install python3 -y;sudo apt-get install python3-pip;python3 -m pip install -U pip;python3 -m pip install -r requirements.txt', execTimeout: 3000000, flatten: true, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: '/tmp', remoteDirectorySDF: false, removePrefix: '', sourceFiles: '**/*')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: true)])
                          }
              }
       }
}
